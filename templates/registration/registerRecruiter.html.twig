{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}

    <div class="container h-100">
        <div class="row justify-content-center align-items-center">
            <div class="col col-sm-6 col-lg-10 mt-5">
                <h1 class="mt-5 mb-5 text-center">Créer un compte</h1>
                    <div class="row justify-content-between">
                        <div class="col-12 col-lg-6 ml-auto">
                            {{ form_row(registrationForm.firstname, {
                                label:'Prénom'
                            }) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.companyName, {
                                label:'Nom de la société'
                            }) }}
                        </div>
                        <div class="col-12 col-lg-6 mr-auto">
                            {{ form_row(registrationForm.lastname, {
                                label:'Nom'
                            }) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                            {{ form_row(registrationForm.companyAddress, {
                                label:'Adresse de la société'
                            }) }}
                        </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col col-sm-6 col-lg-10 mt-5">
                <button type="submit" class="btn btn-primary mt-2">S'enregistrer</button>
            </div>
        </div>
    </div>
{% endblock %}
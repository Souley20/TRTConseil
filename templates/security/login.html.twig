{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">déconnection</a>
        </div>
    {% endif %}

    <div class="container-fluid h-100">
        <div class="row justify-content-center align-items-center mt-5">
            <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3 mt-5">
                <h1 class="h3 mb-3">Veuillez vous connecter</h1>
                <label for="inputEmail" class="mt-2 mb-2">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword" class="mt-4 mb-2">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-primary mt-4 mb-5" type="submit">
                    Connexion
                </button>
                <p>Ou créer un compte <a href="{{ path('app_register_candidate') }}">candidat</a><p>
                <p>Ou créer un compte <a href="{{ path('app_register_recruiter') }}">recruteur</a><p>
            </div>

        </div>
    </div>
</form>
{% endblock %}

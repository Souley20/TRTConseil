{% extends 'base.html.twig' %}

{% block title %}Liste des consultants{% endblock %}

{% block body %}
{{ include('_navbar.html.twig') }}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-5">Liste des consultants</h1>
            </div>
        </div>

        <button class="btn btn-outline-primary" title="Retour au menu administrateur">
            <a href="{{ path('app_administrator') }}"><i class="fa-solid fa-chevron-left"></i></a>
        </button>
    </div>
<div class="container">
    <div class="m-5">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for consultant in consultants %}
                <tr>
                    <td>{{ consultant.firstname }}</td>
                    <td>{{ consultant.lastname }}</td>
                    <td>{{ consultant.email }}</td>
                    <td>
                        <a href="{{ path('app_create_consultant_show', {'id': consultant.id}) }}">Voir</a>
                        <a href="{{ path('app_create_consultant_edit', {'id': consultant.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun consultant</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
    <div class="m-5">
        <a href="{{ path('app_create_consultant_new') }}" class="btn btn-outline-primary">Créer un nouveau consultant</a>
    </div>
{% endblock %}
